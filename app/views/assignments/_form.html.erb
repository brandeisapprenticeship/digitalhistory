      <%= form_for(@assignment, :html=>{:class=>"form-horizontal"}) do |f| %>

          <div class="form-group">
            <%= f.label :title, class:'control-label col-md-2' %>
            <div class='col-md-10'>
              <%= f.text_field :title, class:'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, class:'control-label col-md-2' %>
            <div class='col-md-10'>
              <%= f.text_area :description, class:'form-control wysihtml5' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :due_date, class:'control-label col-md-2' %>
            <div class='col-md-10'>
              <%= f.datetime_select :due_date, class:'form-control' %>
            </div>
          </div>

      <div class="modal-footer">
        <%=link_to('Cancel', assignments_path, class: 'btn btn-default')%>
        <%= f.submit "Save", class: 'btn btn-primary' %>
      </div>
      <% end %>

       <script type="text/javascript">
  $(document).ready(function(){
    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });
    $('#assignment_due_date').datetimepicker();
  })
</script>