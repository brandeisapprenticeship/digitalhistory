<!DOCTYPE html>
<html>
<head>
  <title>Dh</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%if controller.controller_name == "assignments" && (controller.action_name == "index" || controller.action_name == "show" || controller.action_name=="summary")%> assignments <%elsif controller.controller_name == "favorites"%> favorites <%else%>presentations <%end%>'>
<nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Secret Life of Slaves", assignments_path, class:'navbar-brand' %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
       <li id='assignments' class='<%='current' if controller.controller_name == "assignments" && (controller.action_name == "index" || controller.action_name == "show" || controller.action_name=="summary")%>'><%= link_to "Assignments", assignments_path %></li>

       <% if !current_user.admin? %>
        <li id='favorites' class='<%='current' if controller.controller_name == "favorites"%>'><%= link_to "Favorites", favorites_path %></li>
        <%end%>
       <li id='presentations' class='<%='current' if controller.controller_name == "assignments" && (controller.action_name == "present" || controller.action_name == "presentation_summary")%>'><%= link_to "Presentations", presentation_summary_path %></li>

        <%end%>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li>
          <%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %>
        </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
<%= yield %>
</div>
<footer class="footer">
      <div class="container">
        <p class="text-muted">Please contact <a href='mailto:brandeisapprenticeship@gmail.com'>brandeisapprenticeship@gmail.com</a> with any questions</p>
      </div>
    </footer>
</body>
</html>
